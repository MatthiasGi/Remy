.recipes-steps-container
  = yield

%nav.navbar.navbar-light.bg-light.navbar-expand
  %a.btn.btn-outline-secondary{href: @meta[:url_back]}
    %i.fas.fa-angle-left
    = t '.back'

  .flex-grow-1.text-center
    - if @meta[:step_current]
      %p.text-muted #{@meta[:step_current]}/#{@meta[:steps_total]}

  %a.btn.btn-outline-primary{href: @meta[:url_forward]}
    = t '.forward'
    %i.fas.fa-angle-right
